<config>
   <sections>
        <payment>
            <groups>
                <cashondelivery translate="label" module="payment">
                    <fields>
                        <min_order_total translate="label">
                            <label>Minimum Order Total</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>98</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </min_order_total>
                        <max_order_total translate="label">
                            <label>Maximum Order Total</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>99</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </max_order_total>
                    </fields>
                </cashondelivery>
			</groups>
		</payment>
		<tax>
			<groups>
                <classes translate="label comment">
                    <fields>
                        <ignore_shippingtax_customergroup translate="label">
                            <label>Customergroups to ignore shipping taxrates</label>
                            <frontend_type>multiselect</frontend_type>
                            <source_model>adminhtml/system_config_source_customer_group</source_model>
                            <sort_order>5</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </ignore_shippingtax_customergroup>
                        <ignore_shippingtax_customergroup_taxclassid translate="label">
                            <label>Product tax class to use for shipping tax ignoring customergroups</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_shipping_taxclass</source_model>
                            <sort_order>6</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </ignore_shippingtax_customergroup_taxclassid>
                    </fields>
                </classes>
            </groups>
        </tax>
    </sections>
</config>
